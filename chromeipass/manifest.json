{
  "name": "ChromeIPass",
  "version": "1.2.1",
  "manifest_version": 2,
  "description": "Chrome and KeePass integration using KeePassHttp",
  "icons": {
    "16": "keepass.png",
    "48": "keepass-big.png"
  },
  "page_action": {
    "default_icon": "keepass.png",
    "popup": "popup.html"
  },
  "background": {"scripts": ["aes.js","cryptoHelpers.js","utf8.js","background.js"]},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.8.2.min.js", "jquery-ui-1.9.0.custom.min.js", "chromeipass-new.js"],
	  "css": ["jquery-ui-1.9.0.custom.min.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "contextMenus",
	"tabs",
	"http://localhost/",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
  ]
}